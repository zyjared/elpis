{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    // 如果无法推断类型，回退到 any 后需要报错
    // https://www.typescriptlang.org/tsconfig/#noImplicitAny
    "noImplicitAny": true,
    "outDir": "./dist/"
  },
  "include": [
    "elpis-core/**/*.ts",
    "elpis-core/**/*.d.ts",
    "app/**/*.ts",
    "app/**/*.d.ts",
    "app/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
