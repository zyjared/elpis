{
  "name": "elpis",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.13.1",
  "description": "",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "prepare": "simple-git-hooks",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "commit": "git-cz",
    "tsx": "tsx",
    "preview": "python -m http.server -b 127.0.0.1 -d dist",
    "dev": "set NODE_ENV=development && tsx watch --max_old_space_size=4096 scripts/dev.ts",
    "build": "tsx scripts/build.ts",
    "beta": "set NODE_ENV=beta && tsx watch index.ts",
    "prod": "set NODE_ENV=production && tsx index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "catalog": "pnpx codemod pnpm/catalog"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "commander": "catalog:",
    "commitizen": "catalog:",
    "cz-git": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint --edit $1"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
