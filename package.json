{
  "name": "elpis",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.17.1",
  "description": "",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "prepare": "simple-git-hooks",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "commit": "git-cz",
    "tsx": "tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "catalog": "pnpx codemod pnpm/catalog"
  },
  "dependencies": {
    "@elpis/core": "workspace:*",
    "@elpis/ssr": "workspace:*"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "commander": "catalog:",
    "commitizen": "catalog:",
    "cz-git": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint --edit $1"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
