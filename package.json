{
  "name": "elpis",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.13.1",
  "description": "",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "prepare": "simple-git-hooks",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "commit": "git-cz",
    "dev": "tsx watch index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@koa/router": "^13.1.1",
    "fs-extra": "^11.3.0",
    "koa": "^3.0.1",
    "tiny-glob": "^0.2.9"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/fs-extra": "^11.0.4",
    "@types/koa": "^3.0.0",
    "@types/koa__router": "^12.0.4",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.32.0",
    "lint-staged": "^16.1.2",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint --edit $1"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
